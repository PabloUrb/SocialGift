<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/show_my_user_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ShowMyUserActivity">

    <fragment
        android:id="@+id/show_my_user_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText">

    </fragment>

    <fragment
        android:id="@+id/show_my_user_fragment"
        android:name="com.example.app.view.ShowMyUserFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/show_my_user_footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_my_user_header" />

    <Button
        android:id="@+id/show_my_user_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/btn_edit"
        android:textColor="@color/white"
        android:backgroundTint="@color/button_enabled"
        android:drawablePadding="8dp"
        android:padding="8dp" />

    <Button
        android:id="@+id/show_my_user_sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/btn_logout"
        android:backgroundTint="@color/button_enabled"
        android:textColor="@color/white"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="8dp"
        android:padding="8dp" />

    <fragment
        android:id="@+id/show_my_user_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    </fragment>

</androidx.constraintlayout.widget.ConstraintLayout>
